<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.calculators.FertilizerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/honeycomb_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate the exact quantity of NPK fertilizers required per unit area to minimize costs, excess use of fertillizers, and degradation of soil health." />

            <EditText
                android:id="@+id/nitrogenFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nitrogen (kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/phosphorusFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phosphorus (kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/potassiumFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Potassium (kg)"
                android:inputType="numberDecimal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fertilizerCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0A8186"
                app:cardBackgroundColor="#0A8186"
                app:cardCornerRadius="20dp">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#0A8186"
                    android:shadowRadius="0"
                    android:text="Calculate"
                    android:textColor="#fff" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/combination1Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/combination2Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/combination3Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/combination4Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>


</FrameLayout>