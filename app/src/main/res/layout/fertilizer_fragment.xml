<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculators.FertilizerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate the exact quantity of NPK fertilizers required per unit area to minimize costs, excess use of fertillizers, and degradation of soil health." />

            <EditText
                android:id="@+id/nitrogenFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nitrogen (kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/phosphorusFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phosphorus (kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/potassiumFertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Potassium (kg)"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/fertilizerCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate" />

            <TextView
                android:id="@+id/combination1Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/combination2Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/combination3Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/combination4Fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_700" />
        </LinearLayout>

    </ScrollView>


</FrameLayout>